<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/ParentLayoutPaddingBottom"
    android:paddingLeft="@dimen/ParentLayoutPaddingLeft"
    android:paddingRight="@dimen/ParentLayoutPaddingRight"
    android:paddingTop="@dimen/ParentLayoutPaddingTop"
    tools:context="com.example.minhquan.calculator.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <!--Button history -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/ic_expand_more_black_24dp"
                android:background="@drawable/button_expand" />
        </LinearLayout>

        <!--Linear 1-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/RowHeight">
            <Button
                android:id="@+id/btnClear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_fc"
                android:text="C"
                android:textSize="30sp"
                android:textColor="@color/colorBtnclear"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/btnDiv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_fc"
                android:text="÷"
                android:textSize="30sp"
                android:textColor="@color/colorBtnFc"
                />
            <Button
                android:id="@+id/btnMul"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_fc"
                android:text="×"
                android:textSize="40sp"
                android:textColor="@color/colorBtnFc"
                />
            <Button
                android:id="@+id/btnDel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_fc"
                android:textSize="20sp"
                android:drawableLeft="@drawable/ic_backspace_black_24dp"
                android:paddingLeft="30dp"
                android:drawableTint="@color/colorBtnFc"
                />

       </LinearLayout>

        <!--Linear 2-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/RowHeight">
            <Button
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_main"
                android:text="7"
                android:textSize="30sp"
                android:textColor="@color/colorBtnMain"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_main"
                android:text="8"
                android:textSize="30sp"
                android:textColor="@color/colorBtnMain"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_main"
                android:text="9"
                android:textSize="30sp"
                android:textColor="@color/colorBtnMain"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/btnSub"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_fc"
                android:text="–"
                android:textSize="40sp"
                android:textColor="@color/colorBtnFc"
                />
        </LinearLayout>

        <!--Linear 3-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/RowHeight">
            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_main"
                android:text="4"
                android:textSize="30sp"
                android:textColor="@color/colorBtnMain"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_main"
                android:text="5"
                android:textSize="30sp"
                android:textColor="@color/colorBtnMain"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_main"
                android:text="6"
                android:textSize="30sp"
                android:textColor="@color/colorBtnMain"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/btnPlus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_fc"
                android:text="+"
                android:textSize="40sp"
                android:textColor="@color/colorBtnFc"
                />
        </LinearLayout><!--Linear 2-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/RowHeight">
            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_main"
                android:text="1"
                android:textSize="30sp"
                android:textColor="@color/colorBtnMain"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_main"
                android:text="2"
                android:textSize="30sp"
                android:textColor="@color/colorBtnMain"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_main"
                android:text="3"
                android:textSize="30sp"
                android:textColor="@color/colorBtnMain"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/btnBrac"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_fc"
                android:text="()"
                android:textSize="30sp"
                android:textColor="@color/colorBtnFc"
                />
        </LinearLayout><!--Linear 2-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/RowHeight">
            <Button
                android:id="@+id/btn0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_main"
                android:text="0"
                android:textSize="30sp"
                android:textColor="@color/colorBtnMain"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/btnDot"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_main"
                android:text="."
                android:textSize="30sp"
                android:textColor="@color/colorBtnMain"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/btnPoM"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_main"
                android:text="+/_"
                android:textSize="30sp"
                android:textColor="@color/colorBtnMain"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/btnEqual"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_fc"
                android:text="="
                android:textSize="40sp"
                android:textColor="@color/colorBtnEqual"
                />
        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/txtAll"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:enabled="false"
        android:gravity="right"
        android:textSize="35sp"
        android:textColor="#505050"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
